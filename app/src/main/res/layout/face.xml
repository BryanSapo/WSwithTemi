<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:windowSoftInputMode="stateHidden"
    tools:context=".MainActivity"
    android:background="@color/black">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text=" "
           android:textSize="40sp"
           android:layout_weight="0.8"
           />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/black">
    <EditText
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:layout_height="wrap_content"
        android:text="ws://172.20.10.7:1107/hello"
        android:id="@+id/webSocketIP"/>
    <Button
        android:backgroundTint="@color/gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/submitConnect"
        android:text="Connect"/>
</LinearLayout>
    <ImageButton
        android:id="@+id/eye_btn"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.8"
        android:scaleType="fitCenter"
        android:src="@drawable/eye"

        />
    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:textSize="130sp"
        android:textAlignment="center"
        android:gravity="center"
        android:text=""
        android:textColor="@color/white"
        android:background="@color/black"/>
    <TextView
        android:id="@+id/position_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:textSize="12sp"
        android:text="x: Null , y: Null , yal: Null , tiltAngel: Null"
        android:background="@color/black"
        android:textColor="@color/white"/>
    <LinearLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:textColor="@color/white"
            android:id="@+id/id_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This should show Temi id"
            android:layout_margin="15px"/>
        <TextView
            android:textColor="@color/white"
            android:id="@+id/tv_response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This should show response"
            android:layout_margin="15px"/>
        <EditText
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="not avalible now..."
            android:layout_margin="15px"
            android:id="@+id/et_msg"
            android:enabled="false"

            />
        <Button
            android:backgroundTint="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_submit"
            android:text="submit"
            android:layout_margin="15px"/>
        <Button
            android:backgroundTint="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ReConnect"
            android:text="reconnect"
            android:layout_margin="15px"/>
        <Button
            android:backgroundTint="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RePostPosition"
            android:text="resend position"
            android:layout_margin="15px"/>

        <Button
            android:backgroundTint="@color/gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15px"
            android:id="@+id/SwitchPage"
            android:text="Switch"/>

    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>